# Docker Compose Environment Variables
# Copy this file to .env.docker and fill in your production values

# Node Environment
NODE_ENV=production

# Database Configuration
DB_ROOT_PASSWORD=your-secure-root-password-change-this
DB_USER=inshureit
DB_PASSWORD=your-secure-database-password-change-this
DB_PORT=3306

# Backend Configuration
API_PORT=5001

# Frontend Configuration
FRONTEND_PORT=80
VITE_API_URL=https://api.inshureit.com

# JWT Configuration
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-minimum-64-characters-random-string
JWT_EXPIRATION=7d

# CORS Configuration
ALLOWED_ORIGINS=https://inshureit.com,https://www.inshureit.com

# Email Configuration (GoDaddy SMTP)
SMTP_HOST=smtpout.secureserver.net
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=info@inshureit.com
SMTP_PASS=your-godaddy-email-password
EMAIL_FROM=info@inshureit.com

# Security
BCRYPT_ROUNDS=12
